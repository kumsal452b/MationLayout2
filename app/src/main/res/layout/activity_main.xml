<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/icon_1"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:scaleType="center"
        android:src="@drawable/cameraretro"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp"/>
    <ImageView
        android:id="@+id/icon_2"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:scaleType="center"
        android:src="@drawable/gopuram"
        app:layout_constraintLeft_toRightOf="@id/icon_1"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp"/>
    <ImageView
        android:id="@+id/icon_3"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:scaleType="center"
        android:src="@drawable/gopuram"
        app:layout_constraintLeft_toRightOf="@id/icon_2"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp"/>

    <ImageView
        android:id="@+id/icon_4"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:scaleType="center"
        android:src="@drawable/instagram"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon_1"
        android:padding="10dp"/>
    <ImageView
        android:id="@+id/icon_5"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:scaleType="center"
        android:src="@drawable/phoenixframework"
        app:layout_constraintLeft_toRightOf="@id/icon_4"
        app:layout_constraintTop_toBottomOf="@id/icon_1"
        android:padding="10dp"/>
    <ImageView
        android:id="@+id/icon_6"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:scaleType="center"
        android:src="@drawable/projectdiagram"
        app:layout_constraintLeft_toRightOf="@id/icon_5"
        app:layout_constraintTop_toBottomOf="@id/icon_1"
        android:padding="10dp"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>