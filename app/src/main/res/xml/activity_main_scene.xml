<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/view"
            android:layout_width="64dp"
            android:layout_height="64dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/icon_9"
            motion:layout_constraintLeft_toRightOf="@id/icon_8"
            android:layout_width="130dp"
            android:layout_height="130dp"
            motion:layout_constraintTop_toBottomOf="@id/icon_4"
            android:visibility="invisible" />
        <Constraint
            android:id="@+id/icon_8"
            motion:layout_constraintLeft_toRightOf="@id/icon_7"
            android:layout_width="130dp"
            android:layout_height="130dp"
            motion:layout_constraintTop_toBottomOf="@id/icon_4"
            android:visibility="invisible" />


        <Constraint
            android:id="@+id/icon_7"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:visibility="invisible"
            motion:layout_constraintTop_toBottomOf="@id/icon_4"
            motion:layout_constraintLeft_toLeftOf="parent" />
        <Constraint
            android:id="@+id/icon_1"
            android:layout_width="65dp"
            android:layout_height="65dp"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/icon_2"
            motion:layout_constraintLeft_toRightOf="@id/icon_1"
            android:layout_width="65dp"
            android:layout_height="65dp"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/icon_3"
            motion:layout_constraintLeft_toRightOf="@id/icon_2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/icon_4"
            android:layout_width="65dp"
            android:layout_height="65dp"
            motion:layout_constraintTop_toBottomOf="@id/icon_1"
            motion:layout_constraintLeft_toLeftOf="parent" />

    </ConstraintSet>
</MotionScene>